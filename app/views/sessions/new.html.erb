<div class="app">
<div class="header" onClick={this.goToIndex}>
  <h1>Poemist</h1>
  Write a found poem, it's good for you.
</div>

<div class="login">
    <h2>Login</h2>

  <form action="<%= session_url %>" method="post">
    <input type="hidden"
      name="authenticity_token"
      id=""
      value="<%= form_authenticity_token %>">

    <label for="user_username">Username</label>
    <input
      type="text"
      name="user[username]"
      id="user_username">
    </br>
    <label for="user_password">Password</label>
    <input
      type="password"
      name="user[password]"
      id="user_password">
    </br>
    <input type="submit">
  </form>


  <form class="guestLogin" action="<%= session_url %>" method="post">
    <input type="hidden"
      name="authenticity_token"
      id=""
      value="<%= form_authenticity_token %>">

    <input type="hidden"
      type="text"
      name="user[username]"
      id="user_username"
      value="Guest">

    <input type="hidden"
      type="password"
      name="user[password]"
      id="user_password"
      value="password">
    </br>

    <input type="submit" value="Guest Login">
  </form>

  <%= link_to "Sign up!", new_user_url %>
</div>
</div>
